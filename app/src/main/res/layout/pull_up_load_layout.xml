<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLoadLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp16">

        <ProgressBar
            android:id="@+id/mRetryLoadProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/progress_color" />

        <TextView
            android:id="@+id/mReTryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/load_retry"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:id="@+id/mNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_small"
        android:visibility="gone" />
</LinearLayout>